@model List<OnlineShop.Model.Models.Kategorija>
@*
    
*@
@{
    var trenutno = 0;
}

    <table>

        @for (int i = 0; i < 5; i++)
        {
            <tr>
                @for (int j = 0; j < ViewBag.BrojKolona; j++)
                {
                    if (trenutno == Model.Count())
                    {
                        break;
                    }
                    else
                    {

                        <td> <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-categoryId="@Model[trenutno].KategorijaID" class="dropdown-item"> @Model[trenutno++].NazivKategorije </a> </td>
                    }
                }
            </tr>
        }

    </table>
    <hr class="dropdown-divider">
    <a asp-area="" asp-controller="Product" asp-action="Index"  class="dropdown-item text-center"> Prikaži sve </a>