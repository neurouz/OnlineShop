@model ClassLibrary.Models.AppUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/additional-methods.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/additional-methods.js"></script>

<link rel="stylesheet" href="~/css/AccountStyles.css" asp-append-version="true" />

<div class="spacing"></div>

<h4>Registruj se</h4>
<hr />
<div class="row">
    <div class="forma">
        <form asp-action="AddUser" class="register-forma" id="reg">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="label-input">
                    <label asp-for="Ime" class="control-label"> Vaše ime </label>
                    <input asp-for="Ime" class="form-control" placeholder="Ajdin" />
                </div>
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="label-input">
                    <label asp-for="Prezime" class="control-label"> Vaše prezime</label>
                    <input asp-for="Prezime" class="form-control" placeholder="Hukara" />
                </div>
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="label-input">
                    <label asp-for="Spol" class="control-label"> Spol </label>
                    <select name="Spol" class="form-control" asp-for="Spol">
                        <option value="M"> Muško </option>
                        <option value="Z"> Žensko </option>
                    </select>
                </div>
                <span asp-validation-for="Spol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="label-input">
                    <label asp-for="PhoneNumber" class="control-label"> Broj telefona </label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="061/550-134" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="label-input">
                    <label asp-for="Email" class="control-label">E-adresa</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="ajdin.hukara@edu.fit.ba" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="label-input">
                    <label asp-for="UserName" class="control-label" style="color: lightseagreen"> Korisničko ime </label>
                    <input asp-for="UserName" class="form-control" placeholder="Unesite vaše korisničko ime" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="label-input">
                    <label asp-for="PasswordHash" class="control-label" style="color: lightseagreen"> Lozinka</label>
                    <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Unesite vašu lozinku" />
                </div>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <br />
            <br />

            <div class="form-group submit">
                <input type="submit" value="Registruj me!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>

    $(function () {

        $("#reg").validate({
            rules: {
                Ime: {
                    required: true
                },
                Prezime: {
                    required: true
                },
                Spol: {
                    required: true
                },
                UserName: {
                    required: true
                },
                Email: {
                    email: true,
                    required: true
                },
                PasswordHash: {
                    required: true,
                    minlength: 8,
                    passwordRegex: true
                },
                PhoneNumber: {
                    required: true,
                    phoneRegex: true
                }
            },
            messages: {
                Ime: "Molimo unesite vaše ime.",
                Prezime: "Molimo unesite vaše prezime.",
                Spol: "Molimo odaberite vaš spol.",
                Username: "Polje je obavezno.",
                PasswordHash: {
                    required: "Polje je obavezno.",
                    minlength: "Lozinka mora sadržavati najmanje 8 karaktera.",
                    passwordRegex: "Lozinka mora sadržavati mala i velika slova, brojeve i bar jedan specijalni znak."
                },
                Email: "Molimo unesite validnu e-mail adresu.",
                PhoneNumber: {
                    required: "Polje je obavezno.",
                    phoneRegex: "Broj telefona mora biti u formatu 06x/xxx-xxx"
                }
            },
            submitHandler: function (form) {
                form.submit();
            }
        });

        jQuery.validator.addMethod("passwordRegex", function (value, element) {
            return this.optional(element) || /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[#$^+=!*()%&{}/]).{8,}$/g.test(value);
        }, "Lozinka mora sadržavati mala i velika slova, brojeve i bar jedan specijalni znak.");

        jQuery.validator.addMethod("phoneRegex", function (value, element) {
            return this.optional(element) || /^(0[63])[123456]\/\d{3}\-\d{3}$/g.test(value);
        }, "Broj telefona mora biti u formatu 06x/xxx-xxx ili 03x/xxx-xxx.");

    });

</script>